# US Visa Bot Configuration
# Copy this file to .env and fill in your actual values

# Your credentials for https://ais.usvisa-info.com/
EMAIL=your.email@example.com
PASSWORD=your_password_here

# Locale/language setting - can be found in the URL when trying to reschedule
# Examples: 'fr-fr' for France, 'pt-br' for Brazil, 'en-us' for United States
LOCALE=en-us

# Country code for the base URL (https://ais.usvisa-info.com/en-{COUNTRY_CODE}/)
# Examples: 'us', 'fr', 'br', 'kz'
COUNTRY_CODE=us

# Schedule ID - found in the URL when trying to reschedule manually
# URL format: https://ais.usvisa-info.com/{LOCALE}/niv/schedule/{SCHEDULE_ID}/continue_actions
SCHEDULE_ID=12345678

# Facility ID - found in network calls when selecting a new date or inspecting the selector
# Examples: Paris is 44
# URL format: https://ais.usvisa-info.com/{LOCALE}/niv/schedule/{SCHEDULE_ID}/appointment/address/{FACILITY_ID}
FACILITY_ID=44

# Refresh delay in seconds between checks (optional, defaults to 3)
REFRESH_DELAY=3

# Auth retry behavior (optional)
# AUTH_RETRY_DELAY=10
# AUTH_RETRY_MAX=5
# AUTH_RETRY_BACKOFF=2
# AUTH_RETRY_MAX_DELAY=300

# Preferred weekdays when multiple dates are available (optional)
# Accepts comma-separated day names (mon,tue,wed,thu,fri,sat,sun) or numbers (0=Sun..6=Sat)
# PREFERRED_WEEKDAYS=mon,tue
